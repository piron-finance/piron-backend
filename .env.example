# ============================================================================
# Piron Finance Backend - Environment Template
# ============================================================================
# Copy this file to .env and fill in the values

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development  # development | production

# ============================================================================
# DATABASE - SUPABASE
# ============================================================================
# Connection pooling (for app) - use port 6543
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (for migrations) - use port 5432
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-[REGION].pooler.supabase.com:5432/postgres"

# ============================================================================
# APPLICATION
# ============================================================================
PORT=3008
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:3003

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=change-this-to-a-secure-secret
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=change-this-to-another-secure-secret
JWT_REFRESH_EXPIRY=7d

# ============================================================================
# BLOCKCHAIN RPC
# ============================================================================
# Development (Base Sepolia)
BASE_SEPOLIA_RPC=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
BASE_SEPOLIA_CHAIN_ID=84532

# Production (Base Mainnet)
BASE_MAINNET_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_MAINNET_CHAIN_ID=8453

# ============================================================================
# REDIS (Required for Bull queues)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# INDEXER
# ============================================================================
GOLDSKY=your-goldsky-api-key
INDEXER_MAX_BLOCK_RANGE=2000
